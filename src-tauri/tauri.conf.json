{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "mini-spotify",
    "version": "2.1.2"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "window": {
        "all": false,
        "startDragging": true,
        "setSize": true,
        "setPosition": true
      },
      "fs": {
        "all": true,
        "scope": ["$APP/*"]
      },
      "path": {
        "all": true
      }
    },
    "bundle": {
      "active": true,
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.carne8.mini-spotify",
      "targets": "all"
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "alwaysOnTop": true,
        "fullscreen": false,
        "resizable": false,
        "decorations": false,
        "transparent": true,
        "title": "mini-spotify",
        "width": 300,
        "height": 90
      }
    ]
  }
}
